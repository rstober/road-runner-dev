
- name: register all physical_nodes
  register: all_nodes
  brightcomputing.bcm92.physical_node_info: {}

{% if item['hostname'] | regex_search('01$') %}
- name: Display node details
  debug:
    msg:
    - "hostname: {{node.hostname}}"
    - "category: {{node.category.name}}"
    - "software image: {{ node.category.softwareImageProxy.parentSoftwareImage.name }}"
  loop: '{{ all_nodes.physical_nodes }}'
  loop_control:
    label: '{{ node.hostname }}'
    loop_var: node
{% endif %}
  
