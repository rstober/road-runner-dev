        
  - name: "Creating the {{ image_backup if image_backup is not none else image_name }} software image from the {{ clone_from }} image"
    brightcomputing.bcm92.software_image:
      name: {{ image_backup if image_backup is not none else image_name }}
      cloneFrom: {{ clone_from }}
      path: {{ image_path }}
      
  - name: Wait until initrd is generated
    wait_for:
      path: "{{ image_path }}/boot/initrd-{{ kernel_release }}"
